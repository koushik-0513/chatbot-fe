{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "allowJs": false,
        "noEmit": false
    },
    "include": [
        "src/index.ts",
        "src/components/chatbot.tsx",
        "src/components/**/*.tsx",
        "src/hooks/**/*.ts",
        "src/hooks/**/*.tsx",
        "src/contexts/**/*.tsx",
        "src/lib/**/*.ts",
        "src/types/**/*.ts",
        "src/utils/**/*.ts",
        "src/constants/**/*.ts"
    ],
    "exclude": [
        "src/app/**/*",
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}